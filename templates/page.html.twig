<!doctype html>

<html lang="{{ lang }}" dir="{{ dir }}">

<head>

    <meta charset="utf-8">

    <title>{{ title }}</title>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <meta name="format-detection" content="telephone=no">

    <link href="{{ asset('css/fonts.css', 'libero_patterns') }}" rel="stylesheet">
    <link href="{{ asset('css/styles.css', 'libero_patterns') }}" rel="stylesheet">

    <script defer src="{{ asset('js/main.bundle.js', 'libero_patterns') }}"></script>

    {% if gtm_id %}
        <script>
            (function (w, d, s, l, i) {
                w[l] = w[l] || [];
                w[l].push({'gtm.start': new Date().getTime(), event: 'gtm.js'});
                var f = d.getElementsByTagName(s)[0],
                    j = d.createElement(s), dl = l != 'dataLayer' ? '&l=' + l : '';
                j.async = true;
                j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl;
                f.parentNode.insertBefore(j, f);
            })(window, document, 'script', 'dataLayer', '{{ gtm_id|escape('url') }}');
        </script>
    {% endif %}

</head>

<body>

{% if gtm_id %}
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id={{ gtm_id|escape('url') }}" height="0" width="0"
                style="display:none; visibility:hidden"></iframe>
    </noscript>
{% endif %}

{% include '@LiberoPatterns/page-grid.html.twig' with content only %}

</body>

</html>
