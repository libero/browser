<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <defaults public="false"/>

        <service id="Libero\JatsContentBundle\EventListener\BodyListener"
            class="Libero\JatsContentBundle\EventListener\BodyListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.page.content.main" method="onCreatePageMain"/>
        </service>

        <service id="Libero\JatsContentBundle\EventListener\ContentHeaderListener"
            class="Libero\JatsContentBundle\EventListener\ContentHeaderListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.page.content.main" method="onCreatePageMain" priority="50"/>
        </service>

        <service id="Libero\JatsContentBundle\EventListener\TitleListener"
            class="Libero\JatsContentBundle\EventListener\TitleListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.page.content" method="onCreatePage"/>
        </service>

        <service id="Libero\JatsContentBundle\EventListener\ItemTagsListener"
            class="Libero\JatsContentBundle\EventListener\ItemTagsListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.page.content.main" method="onCreatePageMain" priority="-10"/>
        </service>

        <service id="libero.jats_content.page.namespace"
            class="Libero\ContentPageBundle\EventListener\NamespaceListener">
            <argument>jats</argument>
            <argument>http://jats.nlm.nih.gov</argument>
            <tag name="kernel.event_listener" event="libero.page.content" method="onCreatePage" priority="1000"/>
        </service>

        <service id="Libero\JatsContentBundle\EventListener\CreateView\HeadingListener"
            class="Libero\JatsContentBundle\EventListener\CreateView\HeadingListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.view.create" method="onCreateView"/>
        </service>

        <service id="Libero\JatsContentBundle\EventListener\CreateView\LinkListener"
            class="Libero\JatsContentBundle\EventListener\CreateView\LinkListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.view.create" method="onCreateView" priority="-10"/>
        </service>

        <service id="Libero\JatsContentBundle\EventListener\CreateView\FrontItemTagsListener"
            class="Libero\JatsContentBundle\EventListener\CreateView\FrontItemTagsListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.view.create" method="onCreateView"/>
        </service>

        <service id="Libero\JatsContentBundle\EventListener\CreateView\KeywordGroupTagListListener"
            class="Libero\JatsContentBundle\EventListener\CreateView\KeywordGroupTagListListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <argument type="service" id="translator"/>
            <argument type="collection">
                <!-- Map of @kwd-group-type values to translation keys -->
                <argument key="author-keywords">libero.jats.keyword_group.title.author_keywords</argument>
                <argument key="research-organism">libero.jats.keyword_group.title.research_organism</argument>
            </argument>
            <tag name="kernel.event_listener" event="libero.view.create" method="onCreateView"/>
        </service>

        <service id="Libero\JatsContentBundle\EventListener\CreateView\FrontArticleTitleContentHeaderListener"
            class="Libero\JatsContentBundle\EventListener\CreateView\FrontArticleTitleContentHeaderListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.view.create" method="onCreateView"/>
        </service>

        <service id="Libero\JatsContentBundle\EventListener\CreateView\FrontSubjectGroupContentHeaderListener"
            class="Libero\JatsContentBundle\EventListener\CreateView\FrontSubjectGroupContentHeaderListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <argument type="service" id="translator"/>
            <tag name="kernel.event_listener" event="libero.view.create" method="onCreateView"/>
        </service>

        <service id="Libero\JatsContentBundle\EventListener\CreateView\ItalicListener"
            class="Libero\JatsContentBundle\EventListener\CreateView\ItalicListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.view.create" method="onCreateView"/>
        </service>

        <service id="Libero\JatsContentBundle\EventListener\CreateView\BoldListener"
            class="Libero\JatsContentBundle\EventListener\CreateView\BoldListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.view.create" method="onCreateView"/>
        </service>

        <service id="Libero\JatsContentBundle\EventListener\CreateView\ParagraphListener"
            class="Libero\JatsContentBundle\EventListener\CreateView\ParagraphListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.view.create" method="onCreateView"/>
        </service>

        <service id="Libero\JatsContentBundle\EventListener\CreateView\SectionListener"
            class="Libero\JatsContentBundle\EventListener\CreateView\SectionListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.view.create" method="onCreateView"/>
        </service>

        <service id="Libero\JatsContentBundle\EventListener\CreateView\SubListener"
            class="Libero\JatsContentBundle\EventListener\CreateView\SubListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.view.create" method="onCreateView"/>
        </service>

        <service id="Libero\JatsContentBundle\EventListener\CreateView\SupListener"
            class="Libero\JatsContentBundle\EventListener\CreateView\SupListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.view.create" method="onCreateView"/>
        </service>

    </services>

</container>
