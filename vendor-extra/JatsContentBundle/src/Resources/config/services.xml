<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <defaults public="false"/>

        <service id="Libero\JatsContentBundle\EventListener\BodyListener"
            class="Libero\JatsContentBundle\EventListener\BodyListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.page.content.main" method="onCreatePageMain"/>
        </service>

        <service id="Libero\JatsContentBundle\EventListener\ContentHeaderListener"
            class="Libero\JatsContentBundle\EventListener\ContentHeaderListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.page.content.main" method="onCreatePageMain" priority="50"/>
        </service>

        <service id="Libero\JatsContentBundle\EventListener\TitleListener"
            class="Libero\JatsContentBundle\EventListener\TitleListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.page.content" method="onCreatePage"/>
        </service>

        <service id="Libero\JatsContentBundle\EventListener\ItemTagsListener"
            class="Libero\JatsContentBundle\EventListener\ItemTagsListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.page.content.main" method="onCreatePageMain" priority="-10"/>
        </service>

        <service id="libero.jats_content.page.namespace"
            class="Libero\ContentPageBundle\EventListener\NamespaceListener">
            <argument>jats</argument>
            <argument>http://jats.nlm.nih.gov</argument>
            <tag name="kernel.event_listener" event="libero.page.content" method="onCreatePage" priority="1000"/>
        </service>

        <service id="Libero\JatsContentBundle\ViewConverter\HeadingVisitor"
            class="Libero\JatsContentBundle\ViewConverter\HeadingVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="libero.view_converter"/>
        </service>

        <service id="Libero\JatsContentBundle\ViewConverter\LinkVisitor"
            class="Libero\JatsContentBundle\ViewConverter\LinkVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="libero.view_converter" priority="-10"/>
        </service>

        <service id="Libero\JatsContentBundle\ViewConverter\FrontItemTagsVisitor"
            class="Libero\JatsContentBundle\ViewConverter\FrontItemTagsVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="libero.view_converter"/>
        </service>

        <service id="Libero\JatsContentBundle\ViewConverter\KeywordGroupTagListVisitor"
            class="Libero\JatsContentBundle\ViewConverter\KeywordGroupTagListVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <argument type="service" id="translator"/>
            <argument type="collection">
                <!-- Map of @kwd-group-type values to translation keys -->
                <argument key="author-keywords">libero.jats.keyword_group.title.author_keywords</argument>
                <argument key="research-organism">libero.jats.keyword_group.title.research_organism</argument>
            </argument>
            <tag name="libero.view_converter"/>
        </service>

        <service id="Libero\JatsContentBundle\ViewConverter\FrontArticleTitleContentHeaderVisitor"
            class="Libero\JatsContentBundle\ViewConverter\FrontArticleTitleContentHeaderVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="libero.view_converter"/>
        </service>

        <service id="Libero\JatsContentBundle\ViewConverter\FrontSubjectGroupContentHeaderVisitor"
            class="Libero\JatsContentBundle\ViewConverter\FrontSubjectGroupContentHeaderVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <argument type="service" id="translator"/>
            <tag name="libero.view_converter"/>
        </service>

        <service id="Libero\JatsContentBundle\ViewConverter\ItalicVisitor"
            class="Libero\JatsContentBundle\ViewConverter\ItalicVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="libero.view_converter"/>
        </service>

        <service id="Libero\JatsContentBundle\ViewConverter\BoldVisitor"
            class="Libero\JatsContentBundle\ViewConverter\BoldVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="libero.view_converter"/>
        </service>

        <service id="Libero\JatsContentBundle\ViewConverter\ParagraphVisitor"
            class="Libero\JatsContentBundle\ViewConverter\ParagraphVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="libero.view_converter"/>
        </service>

        <service id="Libero\JatsContentBundle\ViewConverter\SectionVisitor"
            class="Libero\JatsContentBundle\ViewConverter\SectionVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="libero.view_converter"/>
        </service>

        <service id="Libero\JatsContentBundle\ViewConverter\SubVisitor"
            class="Libero\JatsContentBundle\ViewConverter\SubVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="libero.view_converter"/>
        </service>

        <service id="Libero\JatsContentBundle\ViewConverter\SupVisitor"
            class="Libero\JatsContentBundle\ViewConverter\SupVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="libero.view_converter"/>
        </service>

    </services>

</container>
