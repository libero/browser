<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <defaults public="false"/>

        <service id="Libero\JatsContentBundle\Handler\JatsContentHandler"
            class="Libero\JatsContentBundle\Handler\JatsContentHandler">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="libero.content_page.handler" alias="jats"/>
        </service>

        <service id="Libero\JatsContentBundle\ViewConverter\HeadingVisitor"
            class="Libero\JatsContentBundle\ViewConverter\HeadingVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="libero.view_converter"/>
        </service>

        <service id="Libero\JatsContentBundle\ViewConverter\LinkVisitor"
            class="Libero\JatsContentBundle\ViewConverter\LinkVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="libero.view_converter" priority="-10"/>
        </service>

        <service id="Libero\JatsContentBundle\ViewConverter\FrontItemTagsVisitor"
            class="Libero\JatsContentBundle\ViewConverter\FrontItemTagsVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="libero.view_converter"/>
        </service>

        <service id="Libero\JatsContentBundle\ViewConverter\KeywordGroupTagListVisitor"
            class="Libero\JatsContentBundle\ViewConverter\KeywordGroupTagListVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <argument type="service" id="translator"/>
            <argument type="collection">
                <!-- Map of @kwd-group-type values to translation keys -->
                <argument key="author-keywords">libero.jats.keyword_group.title.author_keywords</argument>
                <argument key="research-organism">libero.jats.keyword_group.title.research_organism</argument>
            </argument>
            <tag name="libero.view_converter"/>
        </service>

        <service id="Libero\JatsContentBundle\ViewConverter\FrontContentHeaderVisitor"
            class="Libero\JatsContentBundle\ViewConverter\FrontContentHeaderVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="libero.view_converter"/>
        </service>

        <service id="Libero\JatsContentBundle\ViewConverter\ItalicVisitor"
            class="Libero\JatsContentBundle\ViewConverter\ItalicVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="libero.view_converter"/>
        </service>

    </services>

</container>
