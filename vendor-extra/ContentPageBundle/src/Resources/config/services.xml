<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <defaults public="false"/>

        <service id="Libero\ContentPageBundle\Routing\ContentPageRouteLoader"
            class="Libero\ContentPageBundle\Routing\ContentPageRouteLoader">
            <argument type="collection"/>
            <tag name="routing.loader"/>
        </service>

        <service id="Libero\ContentPageBundle\Handler\DelegatingContentHandler"
            class="Libero\ContentPageBundle\Handler\DelegatingContentHandler">
            <argument type="tagged" tag="libero.content_page.handler"/>
        </service>

        <service id="Libero\ContentPageBundle\Handler\ContentHandler"
            alias="Libero\ContentPageBundle\Handler\DelegatingContentHandler"/>

        <service id="Libero\ContentPageBundle\Handler\JatsContentHandler"
                class="Libero\ContentPageBundle\Handler\JatsContentHandler">
            <tag name="libero.content_page.handler"/>
        </service>

        <service id="Libero\ContentPageBundle\Handler\LiberoContentHandler"
                class="Libero\ContentPageBundle\Handler\LiberoContentHandler">
            <tag name="libero.content_page.handler"/>
        </service>

    </services>

</container>
