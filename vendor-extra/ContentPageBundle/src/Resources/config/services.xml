<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <defaults public="false"/>

        <service id="libero.content_page.page.namespace"
            class="Libero\ContentPageBundle\EventListener\NamespaceListener">
            <argument>libero</argument>
            <argument>http://libero.pub</argument>
            <tag name="kernel.event_listener" event="libero.page.content" method="onCreatePage" priority="1000"/>
        </service>

        <service id="Libero\ContentPageBundle\EventListener\MainListener"
            class="Libero\ContentPageBundle\EventListener\MainListener">
            <argument type="service" id="event_dispatcher"/>
            <tag name="kernel.event_listener" event="libero.page.content" method="onCreatePage"/>
        </service>

        <service id="Libero\ContentPageBundle\EventListener\BodyListener"
            class="Libero\ContentPageBundle\EventListener\BodyListener">
            <argument type="service" id="event_dispatcher"/>
            <tag name="kernel.event_listener" event="libero.page.content.main" method="onCreatePagePart"/>
        </service>

        <service id="Libero\ContentPageBundle\EventListener\ContentHeaderListener"
            class="Libero\ContentPageBundle\EventListener\ContentHeaderListener">
            <argument type="service" id="event_dispatcher"/>
            <tag name="kernel.event_listener" event="libero.page.content.main" method="onCreatePagePart" priority="50"/>
        </service>

        <service id="Libero\ContentPageBundle\Routing\ContentPageRouteLoader"
            class="Libero\ContentPageBundle\Routing\ContentPageRouteLoader">
            <argument type="collection"/>
            <tag name="routing.loader"/>
        </service>

    </services>

</container>
