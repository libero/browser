<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <defaults public="false"/>

        <service id="Libero\PatternsBundle\ViewConverter\FrontContentHeaderVisitor"
            class="Libero\PatternsBundle\ViewConverter\FrontContentHeaderVisitor">
            <argument type="service" id="Libero\Views\InlineViewConverter"/>
            <tag name="libero.view_converter"/>
        </service>

        <service id="Libero\PatternsBundle\ViewConverter\LangVisitor"
            class="Libero\PatternsBundle\ViewConverter\LangVisitor">
            <tag name="libero.view_converter" priority="100"/>
        </service>

        <service id="Libero\PatternsBundle\ViewConverter\Inline\ItalicVisitor"
            class="Libero\PatternsBundle\ViewConverter\Inline\ItalicVisitor">
            <argument type="service" id="Libero\Views\InlineViewConverter"/>
            <tag name="libero.view_converter.inline"/>
        </service>

        <service id="Libero\PatternsBundle\ViewConverter\Inline\LangVisitor"
            class="Libero\PatternsBundle\ViewConverter\Inline\LangVisitor">
            <tag name="libero.view_converter.inline" priority="100"/>
        </service>

        <service id="Libero\Views\ViewConverterRegistry"
            class="Libero\Views\ViewConverterRegistry">
            <call method="addMany">
                <argument type="tagged" tag="libero.view_converter"/>
            </call>
        </service>

        <service id="Libero\Views\ViewConverter"
            alias="Libero\Views\ViewConverterRegistry">
        </service>

        <service id="Libero\Views\InlineViewConverterRegistry"
            class="Libero\Views\InlineViewConverterRegistry">
            <call method="addMany">
                <argument type="tagged" tag="libero.view_converter.inline"/>
            </call>
        </service>

        <service id="Libero\Views\InlineViewConverter"
            alias="Libero\Views\InlineViewConverterRegistry">
        </service>

    </services>

</container>
