{% macro include(includes) %}

  {%- if includes is iterable -%}

    {%- for include in includes -%}

      {%- if include.template is defined -%}
        {%- include include.template with include.arguments|default({}) only -%}
      {%- else -%}
        {{- include -}}
      {%- endif -%}

    {%- endfor -%}

  {%- else -%}

    {{- includes -}}

  {%- endif -%}

{% endmacro include %}
