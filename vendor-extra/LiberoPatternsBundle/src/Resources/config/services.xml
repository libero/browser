<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <defaults public="false"/>

        <service id="Libero\LiberoPatternsBundle\ViewConverter\FrontContentHeaderVisitor"
            class="Libero\LiberoPatternsBundle\ViewConverter\FrontContentHeaderVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\InlineViewConverter"/>
            <tag name="libero.view_converter"/>
        </service>

        <service id="Libero\LiberoPatternsBundle\ViewConverter\LangVisitor"
            class="Libero\LiberoPatternsBundle\ViewConverter\LangVisitor">
            <tag name="libero.view_converter" priority="100"/>
        </service>

        <service id="Libero\LiberoPatternsBundle\ViewConverter\Inline\ItalicVisitor"
            class="Libero\LiberoPatternsBundle\ViewConverter\Inline\ItalicVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\InlineViewConverter"/>
            <tag name="libero.view_converter.inline"/>
        </service>

        <service id="Libero\LiberoPatternsBundle\ViewConverter\Inline\LangVisitor"
            class="Libero\LiberoPatternsBundle\ViewConverter\Inline\LangVisitor">
            <tag name="libero.view_converter.inline" priority="100"/>
        </service>

    </services>

</container>
