<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <defaults public="false"/>

        <service id="Libero\LiberoContentBundle\EventListener\ContentHeaderListener"
            class="Libero\LiberoContentBundle\EventListener\ContentHeaderListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.page.content.main" method="onCreatePageMain" priority="50"/>
        </service>

        <service id="Libero\LiberoContentBundle\EventListener\TitleListener"
            class="Libero\LiberoContentBundle\EventListener\TitleListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.page.content" method="onCreatePage"/>
        </service>

        <service id="Libero\LiberoContentBundle\EventListener\CreateView\FrontContentHeaderListener"
            class="Libero\LiberoContentBundle\EventListener\CreateView\FrontContentHeaderListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.view.create" method="onCreateView"/>
        </service>

        <service id="Libero\LiberoContentBundle\EventListener\CreateView\TitleHeadingListener"
            class="Libero\LiberoContentBundle\EventListener\CreateView\TitleHeadingListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.view.create" method="onCreateView"/>
        </service>

        <service id="Libero\LiberoContentBundle\EventListener\CreateView\ItalicListener"
            class="Libero\LiberoContentBundle\EventListener\CreateView\ItalicListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.view.create" method="onCreateView"/>
        </service>

        <service id="Libero\LiberoContentBundle\EventListener\CreateView\BoldListener"
            class="Libero\LiberoContentBundle\EventListener\CreateView\BoldListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.view.create" method="onCreateView"/>
        </service>

        <service id="Libero\LiberoContentBundle\EventListener\CreateView\SubListener"
            class="Libero\LiberoContentBundle\EventListener\CreateView\SubListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.view.create" method="onCreateView"/>
        </service>

        <service id="Libero\LiberoContentBundle\EventListener\CreateView\SupListener"
            class="Libero\LiberoContentBundle\EventListener\CreateView\SupListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.view.create" method="onCreateView"/>
        </service>

    </services>

</container>
