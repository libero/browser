<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <defaults public="false"/>

        <service id="Libero\LiberoContentBundle\EventListener\ContentHeaderListener"
            class="Libero\LiberoContentBundle\EventListener\ContentHeaderListener">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="kernel.event_listener" event="libero.page.content" method="onCreatePage" priority="50"/>
        </service>

        <service id="Libero\LiberoContentBundle\ViewConverter\FrontContentHeaderVisitor"
            class="Libero\LiberoContentBundle\ViewConverter\FrontContentHeaderVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="libero.view_converter"/>
        </service>

        <service id="Libero\LiberoContentBundle\ViewConverter\TitleHeadingVisitor"
            class="Libero\LiberoContentBundle\ViewConverter\TitleHeadingVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="libero.view_converter"/>
        </service>

        <service id="Libero\LiberoContentBundle\ViewConverter\ItalicVisitor"
            class="Libero\LiberoContentBundle\ViewConverter\ItalicVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="libero.view_converter"/>
        </service>

        <service id="Libero\LiberoContentBundle\ViewConverter\BoldVisitor"
            class="Libero\LiberoContentBundle\ViewConverter\BoldVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="libero.view_converter"/>
        </service>

        <service id="Libero\LiberoContentBundle\ViewConverter\SubVisitor"
            class="Libero\LiberoContentBundle\ViewConverter\SubVisitor">
            <argument type="service" id="Libero\ViewsBundle\Views\ViewConverter"/>
            <tag name="libero.view_converter"/>
        </service>

    </services>

</container>
