<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <defaults public="false"/>

        <service id="Libero\ViewsBundle\Views\ViewConverterRegistry"
            class="Libero\ViewsBundle\Views\ViewConverterRegistry"/>

        <service id="Libero\ViewsBundle\Views\ViewConverter"
            alias="Libero\ViewsBundle\Views\ViewConverterRegistry"/>

        <service id="Libero\ViewsBundle\Views\InlineViewConverterRegistry"
            class="Libero\ViewsBundle\Views\InlineViewConverterRegistry"/>

        <service id="Libero\ViewsBundle\Views\InlineViewConverter"
            alias="Libero\ViewsBundle\Views\InlineViewConverterRegistry"/>

    </services>

</container>
