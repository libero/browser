<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <defaults public="false"/>

        <service id="Libero\ViewsBundle\Views\EventDispatchingViewConverter"
            class="Libero\ViewsBundle\Views\EventDispatchingViewConverter">
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="Libero\ViewsBundle\Views\ViewConverter"
            alias="Libero\ViewsBundle\Views\EventDispatchingViewConverter"/>

        <service id="Libero\ViewsBundle\EventListener\CreateView\LangListener"
            class="Libero\ViewsBundle\EventListener\CreateView\LangListener">
            <tag name="kernel.event_listener" event="libero.view.create" method="onCreateView" priority="100"/>
        </service>

    </services>

</container>
